<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context=".MainActivity"
    android:background="#000"
    android:orientation="vertical"
    android:weightSum="100">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mainTextCaption"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="caption"
                style="@style/main_cell_caption"/>
            <TextView
                android:id="@+id/mainText"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                style="@style/main_cell"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="100"
            android:layout_weight="20">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="50">
                <TextView
                    android:id="@+id/textCaption2"
                    android:text="caption"
                    style="@style/grid_cell_caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/text2"
                    android:text="+5  C"
                    style="@style/grid_cell"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:onClick="onClick"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="50">
                <TextView
                    android:id="@+id/textCaption3"
                    android:text="caption"
                    style="@style/grid_cell_caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/text3"
                    android:text="+5  C"
                    style="@style/grid_cell"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:onClick="onClick"/>
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="100"
        android:layout_weight="20">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="50">
            <TextView
                android:id="@+id/textCaption4"
                android:text="caption"
                style="@style/grid_cell_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text4"
                android:text="+5  C"
                style="@style/grid_cell"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:onClick="onClick"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="50">
            <TextView
                android:id="@+id/textCaption5"
                android:text="caption"
                style="@style/grid_cell_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text5"
                android:text="+5  C"
                style="@style/grid_cell"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:onClick="onClick"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="100"
        android:layout_weight="20">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="50">
            <TextView
                android:id="@+id/textCaption6"
                android:text="caption"
                style="@style/grid_cell_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text6"
                android:text="+5  C"
                style="@style/grid_cell"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:onClick="onClick"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="50">
            <TextView
                android:id="@+id/textCaption7"
                android:text="caption"
                style="@style/grid_cell_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text7"
                android:text="+5  C"
                style="@style/grid_cell"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:onClick="onClick"/>
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:weightSum="100"
            android:gravity="start">

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small Text"
                style="@style/small_cell"
                android:layout_weight="40" />

            <TextView
                android:id="@+id/lastTopicText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small Text"
                style="@style/small_cell"
                android:layout_weight="60" />
        </LinearLayout>
</LinearLayout>
